<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
        <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
        <RootNamespace>InternalsViewer.UI.App.vNext</RootNamespace>
        <ApplicationManifest>app.manifest</ApplicationManifest>
        <Platforms>x86;x64</Platforms>
        <RuntimeIdentifiers>win-x86;win-x64</RuntimeIdentifiers>
        <UseWinUI>true</UseWinUI>
        <UserSecretsId>fca01508-87d8-47e7-9683-c1f91185a04d</UserSecretsId>
        <AccelerateBuildsInVisualStudio>True</AccelerateBuildsInVisualStudio>
        
        <!-- Use our own Main entry point so we can control the HostBuilder -->
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DefineConstants>DISABLE_XAML_GENERATED_MAIN</DefineConstants>
        <StartupObject>InternalsViewer.UI.App.vNext.Program</StartupObject>
        <Nullable>enable</Nullable>
        <ApplicationIcon>InternalsViewer.ico</ApplicationIcon>
    </PropertyGroup>
    <ItemGroup>
      <Content Remove="Assets\Database.svg" />
      <Content Remove="Assets\DatabaseFile.svg" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="Controls\AllocationControl.xaml" />
        <None Remove="Controls\AllocationDataGridView.xaml" />
        <None Remove="Controls\Connections\BackupFileConnectionControl.xaml" />
