        <None Remove="Controls\LabelTextBox.xaml" />
        <None Remove="Controls\PageHeader.xaml" />
        <None Remove="Controls\Page\HexViewControl.xaml" />
        <None Remove="Controls\Page\MarkerKeyControl.xaml" />
        <None Remove="Controls\Page\MarkerListView.xaml" />
        <None Remove="Controls\ServerConnectionControl.xaml" />
        <None Remove="Styles\CommonStyles.xaml" />
        <None Remove="Views\ConnectView.xaml" />
        <None Remove="Views\Connect\ConnectBackupPage.xaml" />
        <None Remove="Views\Connect\ConnectFilePage.xaml" />
        <None Remove="Views\Connect\ConnectServerPage.xaml" />
        <None Remove="Views\Connect\ConnectStartPage.xaml" />
        <None Remove="Views\DatabaseView.xaml" />
        <None Remove="Views\PageView.xaml" />
        <None Remove="Views\SettingsPage.xaml" />
    </ItemGroup>
    <ItemGroup>
      <Content Include="InternalsViewer.ico" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CommunityToolkit.WinUI.Controls.HeaderedControls" Version="8.0.240109" />
