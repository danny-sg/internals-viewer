<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InternalsViewer.UI.App.vNext.Views.DatabaseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InternalsViewer.UI.App.vNext.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:InternalsViewer.UI.App.vNext.Controls"
    xmlns:toolkit1="using:CommunityToolkit.WinUI.Controls"
    xmlns:toolkit2="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:drawing="using:System.Drawing"
    xmlns:models="using:InternalsViewer.UI.App.vNext.Models"
    xmlns:tabs="using:InternalsViewer.UI.App.vNext.ViewModels.Tabs"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <CommandBar 
                    Background="Transparent" 
                    IsOpen="False" 
                    DefaultLabelPosition="Right" 
                    HorizontalAlignment="Left">

                <AppBarButton Icon="Add" Label="Connect..."/>

            </CommandBar>
            <CommandBar 
                Background="Transparent" 
                IsOpen="False" 
                DefaultLabelPosition="Right" >
                <CommandBar.Content>
                    <TextBlock Text="{x:Bind Path=ViewModel.AllocationOver.LayerName, Mode=OneWay}" Margin="12,14"/>
                </CommandBar.Content>
            </CommandBar>
        </StackPanel>
        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:AllocationControl Grid.Row="0"
                                        MinHeight="200"
                                        ExtentCount="{x:Bind ViewModel.Size, Mode=OneWay}" 
                                        Layers="{x:Bind ViewModel.AllocationLayers, Mode=OneWay}"
                                        SelectedLayer="{x:Bind ViewModel.SelectedLayer, Mode=OneWay}"
                                        AllocationOver="{x:Bind ViewModel.AllocationOver,Mode=TwoWay}"
                                        PageClicked="Allocations_OnPageClicked"
                                        x:Name="Allocations"/>

            <toolkit1:ContentSizer Grid.Row="1"
                                  Cursor="Hand"
                                  Orientation="Horizontal"
                                  TargetControl="{x:Bind Allocations}" />
            <CommandBar Grid.Row="2"
                        Margin="0" 
                        IsOpen="True"
                        IsSticky="True" 
                        Background="Transparent"
                        DefaultLabelPosition="Right">
                <AppBarElementContainer>
                    <TextBox Width="200" Margin="0 8 10 0"  PlaceholderText="Filter" />
                </AppBarElementContainer>
            </CommandBar>
            <toolkit2:DataGrid x:Name="DataGrid"
                               AutoGenerateColumns="False"
                               CanUserSortColumns="True"
                               SelectionMode="Single"
                               PointerPressed="DataGrid_OnPointerPressed"
                               IsReadOnly="True"
                               MaxHeight="200"
                               GridLinesVisibility="Vertical"
                               ItemsSource="{x:Bind ViewModel.AllocationLayers, Mode=OneWay}"
                               Grid.Row="3">
                <toolkit2:DataGrid.Columns>
                    <toolkit2:DataGridTemplateColumn Header="Key"
                                                     Tag="Key">
                        <toolkit2:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="models:AllocationLayer">
                                <Grid>
                                    <Rectangle Width="16" 
                                               Height="16" 
                                               Fill="{x:Bind Colour, Mode=OneWay, Converter={StaticResource ColorToSolidColorBrushValueConverter}}">

                                    </Rectangle>
                                </Grid>
                            </DataTemplate>
                        </toolkit2:DataGridTemplateColumn.CellTemplate>
                    </toolkit2:DataGridTemplateColumn>
                    <toolkit2:DataGridTextColumn Header="Object Name"
                                                 Binding="{Binding ObjectName}"/>
                    <toolkit2:DataGridTextColumn Header="Index Name"
                                                 Binding="{Binding IndexName}"/>
                    <toolkit2:DataGridTextColumn Header="Index Type"
                                                 Binding="{Binding IndexType}"/>
                    <toolkit2:DataGridTextColumn Header="Root Page"
                                                 Binding="{Binding RootPage}"/>
                    <toolkit2:DataGridTextColumn Header="First Page"
                                                 Binding="{Binding FirstPage}"/>
                    <toolkit2:DataGridTextColumn Header="First IAM"
                                                 Binding="{Binding FirstIamPage}"/>
                    <toolkit2:DataGridTextColumn Header="Page Count"
                                                 Binding="{Binding TotalPages}"/>
                </toolkit2:DataGrid.Columns>
            </toolkit2:DataGrid>
        </Grid>
    </Grid>
</UserControl>
