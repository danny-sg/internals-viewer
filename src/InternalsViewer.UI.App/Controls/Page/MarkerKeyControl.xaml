<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="InternalsViewer.UI.App.Controls.Page.MarkerKeyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{x:Bind BackgroundColour, Converter={StaticResource ColorToSolidColorBrushValueConverter}, Mode=OneWay}" Width="20" Height="20">
        <TextBlock Foreground="{x:Bind ForeColour, Converter={StaticResource ColorToSolidColorBrushValueConverter}, Mode=OneWay}">00</TextBlock>
    </Grid>
</UserControl>
